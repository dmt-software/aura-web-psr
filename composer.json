{
  "name": "dmt-software/aura-web-psr",
  "description": "PSR-7 wrapper for Aura.Web implementations",
  "license": "MIT",
  "authors": [
    {
      "name": "Bas de Mes",
      "email": "bas@dmt-software.nl"
    }
  ],
  "require": {
    "php": ">=7.0",
    "aura/web": "^2.1",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "DMT\\Aura\\Psr\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": ">=9.0",
    "php-http/psr7-integration-tests": ">=1.0"
  },
  "autoload-dev": {
    "psr-4": {
      "DMT\\Test\\Aura\\Psr\\": "tests/"
    }
  },
  "suggest": {
    "rector/rector": "to migrate any PHP 5.x implementations to meet the package requirements"
  }
}
